{
  "configuration": {
    "status": "WARN",
    "appenders": {
      "console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        }
      },
      "file": {
        "name": "File",
        "fileName": "logs/application.log-${date:yyyy-MM-dd_HH-mm-ss}.log",
        "filePattern": "logs/application.log-%d{yyyy-MM-dd_HH-mm-ss}-%i.log",
        "layout": {
          "pattern": "%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        },
        "Policies": {
          "TimeBasedTriggeringPolicy": {
            "interval": "1",
            "modulate": "true"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "20"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "info",
        "AppenderRef": [
          {
            "ref": "Console"
          },
          {
            "ref": "file"
          }
        ]
      }
    }
  }
}