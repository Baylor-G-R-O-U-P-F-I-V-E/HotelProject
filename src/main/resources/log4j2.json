{
  "configuration": {
    "status": "WARN",
    "appenders": {
      "console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        }
      },
      "file": {
        "name": "RollingFile",
        "fileName": "logs/application.log",
        "filePattern": "logs/%d{MM-dd-yy-HH-mm-ss}-%i.log",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        },
        "triggeringPolicy": {
          "OnStartupTriggeringPolicy": {
          }
        },
        "strategy": {
          "DefaultRolloverStrategy": {
            "max": 10
          }
        }
      }
    },
    "loggers": {
      "root": {
        "level": "info",
        "AppenderRef": [
          {
            "ref": "Console"
          },
          {
            "ref": "File"
          }
        ]
      }
    }
  }
}